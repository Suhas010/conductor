<h1>Manage Database</h3>
<%= form_for(:database, url: database_path, method: :patch) do |f| %>
  <p>
    <div id="editor"></div>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit "Save Database" %>
  </p>

<% end %>
<h1>Database Task</h3>
<%= form_tag(database_path) do %>
<%= submit_tag "Create", class: "db_task"%>
<% end %>
<%= form_tag(drop_database_path) do %>
<%= submit_tag "Drop" , class: "db_task"%>
<% end %>
<%= form_tag(seed_database_path) do %>
<%= submit_tag "Seed" , class: "db_task"%>
<% end %>
<%= form_tag(setup_database_path) do %>
<%= submit_tag "Setup" , class: "db_task"%>
<% end %>


<%= content_for :scripts do %>
  <%= javascript_include_tag "conductor/editor" %>
  <%= javascript_include_tag "conductor/databases" %>
<% end %>